# Description: ROX volume applet
# URL: http://www.hayber.us/rox/Volume/
# Maintainer: Lucas Hazel, lucas@die.net.au
# Depends on: pyalsaaudio, rox-lib

name=volume
version=009
release=1
source=(http://www.hayber.us/rox/applets/Volume-$version.tgz)

build() {
	python /usr/lib/python/compileall.py Volume
	mkdir -p $PKG/usr/ROX/Apps
	cp -r Volume $PKG/usr/ROX/Apps
}
