# Description: Window Navigator Construction Kit library
# URL: http://cvs.gnome.org/viewcvs/libwnck/
# Maintainer: Matt Housh, jaeger at morpheus dot net
# Depends on: gtk, startup-notification
# Group: gnome/desktop

name=libwnck
version=2.18.0
release=1
source=(http://download.gnome.org/desktop/2.18/2.18.0/sources/$name-$version.tar.bz2)

build() {
	cd $name-$version
	rm po/*.po
	sed -i -e 's/USE_NLS=yes/USE_NLS=no/' \
		-e 's/ENABLE_NLS 1/ENABLE_NLS 0/' configure
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share
}
